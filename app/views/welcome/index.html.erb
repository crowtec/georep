<div id="zone-name" class="text-center alert-default">
  <h2><%= @current_zone[:name]%></h2>
</div>
<div id="reputacion" class="alert text-center alert-success">
  Reputacion:

</div>
<div id="map-container">
</div>

<div>
  <button type="button" id="new-valoration" class="btn btn-success glyphicon glyphicon-plus col-md-2" data-toggle="modal" data-target="#myModal"></button>


</div>

<div id="myModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Añadir Valoración</h4>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_tag url: '/add_repvalue' do |f| %>
            <%= f.text_area :texto %>
            <%= f.text_field :foto %>
            <%= f.text_field :etiquetas %>
            <%= f.number_field :valor %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Valorar", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
